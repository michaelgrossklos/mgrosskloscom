{
  "trailingComma": "es5",
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "printWidth": 120,
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "strict",
  "vueIndentScriptAndStyle": true,
  "singleAttributePerLine": true,
  "proseWrap": "always",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      },
      "files": "*.gql",
      "options": {
        "parser": "graphql"
      },
      "files": "*.js",
      "options": {
        "parser": "babel"
      },
      "files": "*.vue",
      "options": {
        "parser": "vue"
      }
    }
  ]
}
